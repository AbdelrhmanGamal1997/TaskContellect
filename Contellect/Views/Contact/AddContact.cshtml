
@model ContactCreateDto
@{
    ViewData["Title"] = "AddContact";
}

<form asp-action="AddContact" id="contactForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Add Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input type="text" asp-for="Phone" class="form-control" placeholder="Add Phone">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" asp-for="Address" class="form-control" placeholder="Add Address">
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <input type="text" asp-for="Notes" class="form-control" placeholder="Add Notes">
    </div>
    <button type="submit" class="btn btn-primary">Save Contact</button>
</form>
@section Scripts {
    <script src="~/customjs\contact\contact.js"></script>
}